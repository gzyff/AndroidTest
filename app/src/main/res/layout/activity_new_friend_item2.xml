<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:orientation="horizontal"
    tools:context="big.work.NewFriendItem2Activity">
    <ImageView
        android:id="@+id/new_friend_item2_image"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="55dp"
        android:src="@mipmap/tx46"
        android:layout_height="55dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginLeft="8dp"
        android:layout_weight="5"
        android:orientation="vertical">
        <TextView
            android:id="@+id/new_friend_item2_name"
            android:layout_width="wrap_content"
            android:text="爱吃红烧肉的小熊"
            android:layout_height="35dp"
            android:textSize="25dp"
            android:textColor="#000000"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/new_friend_item2_sex"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text=" ♀18 "
                android:textColor="#FFFFFF"
                android:background="#00B2EE"
                />
            <TextView
                android:id="@+id/new_friend_item2_from"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text=" ♀18 "
                android:layout_marginLeft="5dp"
                android:textColor="#FFFFFF"
                android:background="#FFCA0F"
                />
            <TextView
                android:id="@+id/new_friend_item2_common"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text=" ♀18 "
                android:layout_marginLeft="5dp"
                android:textColor="#FFFFFF"
                android:background="#1263A1"
                />
            <TextView
                android:id="@+id/new_friend_item2_constellation"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text=" ♀18 "
                android:layout_marginLeft="5dp"
                android:textColor="#FFFFFF"
                android:background="#377375"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/new_friend_item2_case"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="你可能认识"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/new_friend_item2_delete"
        android:layout_width="22dp"
        android:layout_height="20dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:src="@mipmap/delete"/>
</LinearLayout>
